<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="S3Explorer.Views.InputDialog"
        Width="400" Height="180"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">

    <DockPanel Margin="16">
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal"
                    HorizontalAlignment="Right" Spacing="8" Margin="0,12,0,0">
            <Button Width="80" Click="OnOk" Classes="accent">
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <PathIcon Data="{StaticResource IconCheck}" Width="14" Height="14"/>
                    <TextBlock Text="OK" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button Width="80" Click="OnCancel">
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <PathIcon Data="{StaticResource IconClose}" Width="14" Height="14"/>
                    <TextBlock Text="Cancel" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <StackPanel Spacing="8">
            <TextBlock x:Name="PromptText" TextWrapping="Wrap"/>
            <TextBox x:Name="InputBox"/>
        </StackPanel>
    </DockPanel>
</Window>
